<h1>Articles</h1>
<p class="pull-right">
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= simple_format article.content %></td>
        <td><%= link_to 'Destroy', article, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
